<Window x:Class="Login.PassWordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="PassWordWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/login.jpg"/>
        </Grid.Background>
        <Label Name="label" Content="" HorizontalAlignment="Left" Margin="233,58,0,0" VerticalAlignment="Top" Width="159"/>
        <Canvas HorizontalAlignment="Left" Height="100" Margin="178,421,0,-100.333" VerticalAlignment="Top" Width="100"/>
        <Canvas HorizontalAlignment="Left" Height="180" Margin="212,110,0,0" VerticalAlignment="Top" Width="333" RenderTransformOrigin="0.5,0.5" Background="#FF993326" Opacity="0.7">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.15"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <TextBox x:Name="user" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="132" Canvas.Top="38"/>
            <PasswordBox x:Name="password" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="120" Canvas.Left="132" Canvas.Top="77"/>
            <Label Content="账号" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#B29CC0E7" RenderTransformOrigin="1.858,0.434" Canvas.Left="66" Canvas.Top="36"/>
            <Label Content="密码&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#B29CC0E7" Height="25" Canvas.Left="66" Canvas.Top="75"/>
            <Button Content="登陆" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click" Background="#B29CC0E7" BorderBrush="#FF1053EC" Canvas.Left="132" Canvas.Top="123"/>
        </Canvas>

    </Grid>
</Window>
