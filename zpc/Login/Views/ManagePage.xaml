<Page x:Class="Login.Views.ManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Login"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="ManagePage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Flipper.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Popupbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <ContentControl x:Name="ManageSystem">
        <TabControl HorizontalAlignment="Left" Height="424" Margin="0,0,-6.667,-3.333" VerticalAlignment="Top" Width="800" RenderTransformOrigin="0.5,0.498" >
            <TabItem Header="添加账号" HorizontalAlignment="Left" Width="112" Margin="-2,-2,-40.667,0.333" Background="{x:Null}" Opacity="0.7">
                <Grid>
                    <Grid Height="397" VerticalAlignment="Top">
                        <materialDesign:Card
                         Background="{DynamicResource PrimaryHueLightBrush}"
                         Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                          Padding="8" Margin="205,26,289,0">
                            <TextBlock FontSize="16" HorizontalAlignment="Center">
                                  请确认账号信息后再提交
                            </TextBlock>
                        </materialDesign:Card>
                        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="add" Identifier="addAccount" IsTabStop="False"/>
                        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="addFail" Identifier="addAccount" IsTabStop="False"/>
                        <DataGrid Name="accountGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="259" Margin="190,77,0,0" VerticalAlignment="Top" Width="auto" BorderBrush="#FF527C72" Opacity="0.7" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Path=userName}" ClipboardContentBinding="{x:Null}" Header="  账号  "/>
                                <DataGridTextColumn Binding="{Binding Path=password}" ClipboardContentBinding="{x:Null}" Header="  密码  "/>
                                <DataGridTextColumn Binding="{Binding Path=accountRole}" ClipboardContentBinding="{x:Null}" Header="  账号类型  "/>
                                <DataGridTextColumn Binding="{Binding Path=name}" ClipboardContentBinding="{x:Null}" Header="  队名/裁判ID  "/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button  Content="添加" HorizontalAlignment="Left" Margin="641,245,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.969,0.583" Height="32" Click="addGrid_Click"/>
                        <Button  Content="删除" HorizontalAlignment="Left" Margin="641,304,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.969,0.583" Height="32" Click="deleteGrid_Click"/>
                        <TextBlock
                             TextAlignment="Center"
                             Margin="0,26,32,376"
                            FontSize="15"
                            FontWeight="Bold" Text="添加账号信息"/>
                        <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Content="确定" HorizontalAlignment="Left" Margin="321,341,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.969,0.583" Height="32" Click="addAccount_Click"/>

                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="设置比赛类型" HorizontalAlignment="Left"  Margin="-2,-2,-40.667,0.333" Background="{x:Null}" Opacity="0.7" Width="112">
                <Grid Margin="0,-2,0,1.667">

                    <materialDesign:DialogHost Name="sethost" Identifier="sethost" Grid.Column="3"></materialDesign:DialogHost>
                    <Label Content="代表队男/女各年龄组最大报名人数" HorizontalAlignment="Left" Margin="144,86,0,0" VerticalAlignment="Top" Width="193" Grid.ColumnSpan="4"/>
                    <Label Content="代表队单个比赛最大上场人数" HorizontalAlignment="Left" Margin="144,139,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                    <Label Content="团体比赛计算前几名的成绩&#xD;&#xA;" HorizontalAlignment="Left" Margin="144,190,0,0" VerticalAlignment="Top" Width="171" Height="26" Grid.ColumnSpan="3"/>
                    <ComboBox Name="baomingCount" HorizontalAlignment="Left" Margin="410,84,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="7"/>
                        <ComboBoxItem Content="8"/>
                    </ComboBox>
                    <ComboBox Name="playerCount" HorizontalAlignment="Left" Margin="410,137,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                    </ComboBox>
                    <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Content="保存" HorizontalAlignment="Left" Margin="327,279,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" />
                    <ComboBox Name="qianjimingCount" HorizontalAlignment="Left" Margin="410,190,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.801,0.094">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="预赛" Margin="0,-2,-88,0" Background="{x:Null}" Opacity="0.7" HorizontalAlignment="Left" Width="112">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="307*"/>
                        <ColumnDefinition Width="98*"/>
                        <ColumnDefinition Width="389*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:DialogHost Name="prehost" Identifier="prehost" Grid.ColumnSpan="3" Margin="0,0,0.001,-0.333"></materialDesign:DialogHost>
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="生成预赛赛事表" HorizontalAlignment="Left" Margin="118.666,259,0,0" VerticalAlignment="Top" Width="130" Height="32" Click="Button_Click_5" Grid.Column="2"/>
                    <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Content="添加裁判" HorizontalAlignment="Left" Margin="118.666,178,0,0" VerticalAlignment="Top" Width="130" Height="32" Foreground="White" Click="Button_Click_4" Grid.Column="2"/>
                    <DataGrid Name="preMatchGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="259" Margin="109,67,0,0" VerticalAlignment="Top" Width="328" BorderBrush="#FF527C72" Opacity="0.7" Grid.ColumnSpan="3" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=project}" ClipboardContentBinding="{x:Null}" Header="  项目  "/>
                            <DataGridTextColumn Binding="{Binding Path=groupID}" ClipboardContentBinding="{x:Null}" Header="  小组编号  "/>
                            <DataGridTextColumn Binding="{Binding Path=team}" ClipboardContentBinding="{x:Null}" Header="  代表队  "/>
                            <DataGridTextColumn Binding="{Binding Path=athlete}" ClipboardContentBinding="{x:Null}" Header="  运动员  "/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="决赛" Margin="0,-2,-131,0.333" Opacity="0.7" Background="{x:Null}" HorizontalAlignment="Left" Width="112"  RenderTransformOrigin="-0.376,0.595">
                <Grid>

                    <materialDesign:DialogHost Name="finalhost" Identifier="finalhost" Grid.Column="3"></materialDesign:DialogHost>
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Content="生成决赛赛事表" HorizontalAlignment="Left" Margin="532,253,0,0" VerticalAlignment="Top" Width="130" Height="28" Click="Button_Click_3"/>
                    <DataGrid Name="finalMatchGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="287" Margin="109,58,0,0" VerticalAlignment="Top" Width="358" BorderBrush="#FF527C72" Opacity="0.7">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=project}" ClipboardContentBinding="{x:Null}" Header="  项目  "/>
                            <DataGridTextColumn Binding="{Binding Path=groupID}" ClipboardContentBinding="{x:Null}" Header="  小组编号  "/>
                            <DataGridTextColumn Binding="{Binding Path=team}" ClipboardContentBinding="{x:Null}" Header="  代表队  "/>
                            <DataGridTextColumn Binding="{Binding Path=athlete}" ClipboardContentBinding="{x:Null}" Header="  运动员  "/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="添加裁判" HorizontalAlignment="Left" Margin="532,182,0,0" VerticalAlignment="Top" Width="130" Height="32" Click="Button_Click_6"/>
                </Grid>
            </TabItem>

        </TabControl>
    </ContentControl>
</Page>
